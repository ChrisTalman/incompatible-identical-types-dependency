{
	"compilerOptions":
	{
		"composite": true,
		"declaration": true,
		"target": "es2015",
		"module": "ES6",
		"moduleResolution": "node",
		"baseUrl": "./",
		"outDir": "./build/",
		"lib":
		[
			"es2015",
			"es2017"
		],
		"removeComments": true,
		"downlevelIteration": true,
		"alwaysStrict": true,
		"allowSyntheticDefaultImports": true,
		"strictNullChecks": true,
		"resolveJsonModule": true,
		"watch": true
	}
}